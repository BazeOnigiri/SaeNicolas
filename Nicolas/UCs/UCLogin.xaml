<UserControl x:Class="Nicolas.UCs.UCLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicolas.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="White" Width="200" Height="250" Margin="450,0,0,0">
            <Label x:Name="labConnexion" Content="Connexion" FontWeight="Bold" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtErreur" TextWrapping="Wrap" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,-15" Foreground="Red"/>
            <Label x:Name="labIdentifiant" Content="Identifiant" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,20,0,0"/>
            <TextBox x:Name="txtIdentifiant" TextWrapping="Wrap" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <Label x:Name="labMdp" Content="Mot de passe" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,10,0,0"/>
            <TextBox x:Name="txtMdp" TextWrapping="Wrap" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <Button x:Name="butConnexion" Content="Se Connecter" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0" Background="Black" Foreground="Gainsboro" BorderBrush="Black" Click="butConnexion_Click" />
        </StackPanel>


    </Grid>
</UserControl>
