<UserControl x:Class="Nicolas.UCs.UCVisualiserCommandes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicolas.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="10">
        <Grid Height="430" Width="780" Margin="0,-8,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto" MinHeight="52.077"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Titre -->
            <Label Content="Commandes" FontSize="24" HorizontalAlignment="Center" Grid.Row="0" Margin="0,0,0,10" Width="142"/>

            <!-- Barre de recherche et bouton filtre -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10" Width="455">
                
                <TextBox x:Name="textBoxRecherche" Width="250" Height="28" Margin="0,0,10,0" VerticalAlignment="Center"
                     Text="{Binding Recherche, UpdateSourceTrigger=PropertyChanged}" KeyDown="textBoxRecherche_KeyDown"/>
                <Button x:Name="btnFiltre" Content="Filtre" Width="80" Height="28" Click="btnFiltre_Click"/>
                <Button x:Name="btnClearFiltres" Content="Effacer filtres" Width="110" Height="28" Click="btnClearFiltres_Click" Margin="5,0,0,0" IsEnabled="False"/>

                <Popup x:Name="popupFiltre" PlacementTarget="{Binding ElementName=btnFiltre}" Placement="Bottom" StaysOpen="False">
                    
                    <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="15" CornerRadius="5">
                        
                        <StackPanel Width="250">
                            <TextBlock Text="Milésime :" Margin="0,0,0,5"/>
                            <TextBox x:Name="textBoxMillesime" Width="80" Margin="0,0,0,10" Text="{Binding Millesime, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Type de vin :" Margin="0,0,0,5"/>
                            <ComboBox x:Name="comboBoxTypeVin"
                                      Width="120"
                                      Margin="0,0,0,10"
                                      ItemsSource="{Binding ListeTypesVin}"
                                      SelectedValue="{Binding TypeVin, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content=""/>
                            </ComboBox>

                            <TextBlock Text="Appelation :" Margin="0,0,0,5"/>
                            <ComboBox x:Name="comboBoxAppelation"
                                      Width="120"
                                      Margin="0,0,0,10"
                                      ItemsSource="{Binding ListeAppelations}"
                                      SelectedValue="{Binding Appelation, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content=""/>
                            </ComboBox>

                            <TextBlock Text="Prix :" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="textBoxPrixMin" Width="50" Margin="0,0,5,0" Text="{Binding PrixMin, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="à" VerticalAlignment="Center"/>
                                <TextBox x:Name="textBoxPrixMax" Width="50" Margin="5,0,0,0" Text="{Binding PrixMax, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="€" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Date :" Margin="0,0,0,5"/>
                            <DatePicker x:Name="datePickerCommande" Margin="0,0,0,10" SelectedDate="{Binding DateCommande, UpdateSourceTrigger=PropertyChanged}"/>

                            <Button Content="Appliquer les filtres" Click="btnAppliquerFiltre_Click" Width="150" HorizontalAlignment="Center"/>
                            
                        </StackPanel>
                        
                    </Border>
                </Popup>
                
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dataGridCommandes"
                  Grid.Row="2" Grid.Column="0"
                  AutoGenerateColumns="False"
                  SelectionChanged="dataGridCommandes_SelectionChanged"
                  Margin="0,0,10,0"
                  Height="260"
                  VerticalAlignment="Top"
                  IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding NumCommande}" Width="*"/>
                    <DataGridTextColumn Header="Employé" Binding="{Binding NumEmploye}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding DateCommande, StringFormat=d}" Width="*"/>
                    <DataGridTemplateColumn Header="Validé" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Valider}" IsEnabled="False" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Montant" Binding="{Binding PrixTotal}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Détails de la commande -->
            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="3"
                BorderBrush="Red" BorderThickness="1" Padding="10"
                Background="#FAFAFA" Margin="0,0,0,80">
                <StackPanel>
                    <TextBlock Text="Détails de la commande" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="textBlockDetails" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Text="Vins :" FontWeight="Bold" Margin="0,10,0,0"/>
                    <ItemsControl x:Name="itemsVins"/>
                </StackPanel>
            </Border>

            <!-- Boutons -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="135,265,0,50" Width="510" Grid.RowSpan="2">
                <Button Content="Supprimer la commande" Width="150" Margin="10,0" Click="BtnSupprimer_Click"/>
                <Button Content="Modifier la commande" Width="150" Margin="10,0" Click="BtnModifier_Click"/>
                <Button Content="Ajouter une commande" Width="150" Margin="10,0" Click="BtnAjouter_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
