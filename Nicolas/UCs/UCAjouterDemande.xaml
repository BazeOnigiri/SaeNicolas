<UserControl x:Class="Nicolas.UCs.UCAjouterDemande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicolas.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="10">
        <Grid Height="430" Width="780">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="260"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <Label Content="Nouvelle Demande" 
                   FontSize="24" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15" 
                   Foreground="White" Width="212"/>

            <!-- Contenu principal -->
            <Grid Grid.Row="1" Margin="140,10,168,10" Background="#F2FFFFFF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*" MinHeight="35.96"/>
                    <RowDefinition Height="*" MinHeight="40"/>
                </Grid.RowDefinitions>

                <!-- Vin sélectionné -->
                <Label 
                       Content="Vin sélectionné :" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="Black" Height="26"/>
                <TextBlock Grid.Column="1"
                          x:Name="txtVinSelectionne" 
                          Background="#FAFAFA"
                          Padding="5"
                          TextWrapping="Wrap"
                          MinHeight="25"
                          Margin="10,0,10,0" VerticalAlignment="Center"/>

                <!-- Date -->
                <Label Grid.Row="1" 
                       Content="Date :" 
                       FontWeight="Bold"
                       Margin="0,5,0,0"
                       Foreground="Black" VerticalAlignment="Top"/>
                <DatePicker Grid.Row="1" Grid.Column="1"
                           x:Name="dpDate" 
                           Margin="10,0,0,10" HorizontalAlignment="Left" Width="150" VerticalAlignment="Center" IsEnabled="False"/>

                <!-- Quantité -->
                <Label Grid.Row="2" 
                       Content="Quantité :" 
                       FontWeight="Bold"
                       Margin="0,5,0,0"
                       Foreground="Black" VerticalAlignment="Top"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                        x:Name="txtQuantite"
                        Margin="10,0,10,11" VerticalAlignment="Center" Text="1"/>

                <!-- Client -->
                <Label Grid.Row="3" 
                       Content="Client :" 
                       FontWeight="Bold"
                       Foreground="Black" 
                       VerticalAlignment="Top"/>
                <Grid Grid.Row="3" Grid.Column="1" Margin="10,0,10,11">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="txtClient"
                             VerticalAlignment="Center"
                             TextChanged="txtClient_TextChanged"/>

                    <ListBox x:Name="listSuggestions"
                             Grid.Row="1"
                             MaxHeight="100"
                             Visibility="Collapsed"
                             SelectionChanged="listSuggestions_SelectionChanged"/>
                </Grid>

                <!-- Boutons Client -->
                <StackPanel Grid.Row="4"
                          Orientation="Horizontal"
                          Margin="112,0,0,10" Grid.ColumnSpan="2">
                    <Button x:Name="butModifClient" 
                            Content="Modifier Client"
                            Width="120" Height="30"
                            Margin="0,0,10,0"/>
                    <Button x:Name="butNouveauClient"
                            Content="Nouveau Client"
                            Width="120" Height="30"
                            Click="butNouveauClient_Click"/>
                </StackPanel>
            </Grid>

            <!-- Boutons de bas de page -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top" Height="35" Width="320">
                <Button x:Name="butValiderDemande"
                        Content="Valider la demande"
                        Width="150" Height="35"
                        Margin="0,0,20,0"
                        Click="butValiderDemande_Click"/>
                <Button x:Name="butAnnuler"
                        Content="Annuler"
                        Width="150" Height="35"
                        Click="butAnnuler_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>