<UserControl x:Class="Nicolas.UCs.UCAjouterDemande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicolas.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="White" Width="250" Height="350">
            <Label x:Name="labNouvelleDemande" Content="Nouvelle Demande" HorizontalAlignment="Center" Margin="0,10,0,0" FontWeight="Bold"/>
            <Label x:Name="labDate" Content="Date" Margin="20,10,0,0"/>
            <DatePicker x:Name="dpDate" HorizontalAlignment="Center" Margin="0,0,25,0"/>
            <Label x:Name="labQuantite" Content="Quantité" Margin="20,10,0,0"/>
            <TextBox x:Name="txtQuantite" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,25,0" Width="150"/>
            <Label x:Name="labClient" Content="Client" Margin="20,10,0,0"/>
            <TextBox x:Name="txtClient" TextWrapping="Wrap" Width="150" HorizontalAlignment="Center" Margin="0,0,25,0"/>
            <Button x:Name="butModifClient" Content="Modifier Client" Foreground="#FFDEDEDE" Background="Black" HorizontalAlignment="Left" Margin="40,10,0,0"/>
            <Button x:Name="butNouveauClient" Content="Nouveau Client " HorizontalAlignment="Left" Margin="40,5,0,0" Background="Black" Foreground="#FFDEDEDE" Click="butNouveauClient_Click" />
            <Button x:Name="butValiderDemande" Content="Valider Demande" Foreground="#FFDEDEDE" Background="Black" HorizontalAlignment="Center" Margin="0,40,0,0"/>

        </StackPanel>

    </Grid>
</UserControl>
