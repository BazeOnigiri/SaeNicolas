<UserControl x:Class="Nicolas.UCs.UCModifierCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Modification de la commande" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- Infos commande -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Numéro : " FontWeight="Bold"/>
            <TextBlock x:Name="txtNumCommande" Margin="5,0,20,0"/>
            <TextBlock Text="Date : " FontWeight="Bold"/>
            <TextBlock x:Name="txtDateCommande" Margin="5,0,20,0"/>
            <TextBlock Text="Prix total : " FontWeight="Bold"/>
            <TextBlock x:Name="txtPrixTotal" Margin="5,0,20,0"/>
        </StackPanel>

        <!-- Détails demandes associées -->
        <GroupBox Header="Demandes associées à la commande" Grid.Row="2" Margin="0,0,0,10">
            <DataGrid x:Name="dgDemandesAssociees" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NumDemande" Binding="{Binding NumDemande}" Width="*"/>
                    <DataGridTextColumn Header="NomVin" Binding="{Binding NomVin}" Width="*"/>
                    <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}" Width="*"/>
                    <DataGridTextColumn Header="Prix du vin" Binding="{Binding PrixVin}" Width="*"/>
                    <DataGridTextColumn Header="Date de la demande" Binding="{Binding DateDemande}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Toutes les demandes -->
        <GroupBox Header="Toutes les demandes" Grid.Row="3">
            <DataGrid x:Name="dgToutesDemandes" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NumDemande" Binding="{Binding NumDemande}" Width="*"/>
                    <DataGridTextColumn Header="NumVin" Binding="{Binding NumVin}" Width="*"/>
                    <DataGridTextColumn Header="Quantite" Binding="{Binding QuantiteDemande}" Width="*"/>
                    <DataGridTextColumn Header="DateDemande" Binding="{Binding DateDemande}" Width="*"/>
                    <DataGridTextColumn Header="NumCommande" Binding="{Binding NumCommande}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
