<UserControl x:Class="Nicolas.UCs.UCVisualiserDemandes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nicolas.UCs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dgDemande" d:ItemsSource="{d:Binding LesDemandes}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumDemande, ValidatesOnExceptions=true}"
                    Header="Num Demande" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumVin, ValidatesOnExceptions=true}"
                    Header="Num Vin" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumEmploye, ValidatesOnExceptions=true}"
                    Header="Num Employe" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NumClient, ValidatesOnExceptions=true}"
                    Header="Num Client"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateDemande, ValidatesOnExceptions=true}"
                    Header="Date Demande"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding QuantiteDemande, ValidatesOnExceptions=true}"
                    Header="Quantite Demande"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Accepter, ValidatesOnExceptions=true}"
                    Header="Accepter"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
